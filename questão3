#include <stdio.h>
#include <string.h>

int main()
{
    int i, j;
    char string[30], str_v[5];
    printf("Informe uma palavra: ");
    scanf("%s", string);
    
    while(i<5){
        str_v[i] = string[i];
        i++;
    }
    
    printf("\nResultado: ");
    for(i = 0; i <5; i++){
    printf("%c", str_v[i]);
}
    return 0;
}
